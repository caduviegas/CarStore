<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/margin_l"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/loading_view_message"
        app:lottie_rawRes="@raw/loading" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/loading_view_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="@dimen/margin_m"
        android:layout_marginBottom="@dimen/margin_xxl_5"
        android:gravity="center"
        android:layout_above="@+id/dots_animation_view"
        android:text="@string/loading_text"
        android:textColor="@color/black"
        android:textSize="@dimen/font_m"
        android:textStyle="bold" />



    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/dots_animation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_l"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/search" />



</RelativeLayout>